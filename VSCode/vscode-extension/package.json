{
  "name": "sdsl",
  "displayName": "Stride SDSL Shader Tools",
  "description": "IntelliSense, (future) debugging, and assistance for Stride and vvvv SDSL shaders",
  "icon": "icons/icon.png",
  "version": "0.7.2",
  "publisher": "tebjan",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Debuggers"
  ],
  "keywords": [
    "sdsl",
    "stride",
    "shader",
    "hlsl",
    "vvvv",
    "vl",
    "game engine",
    "graphics"
  ],
  "extensionDependencies": [
    "ms-dotnettools.vscode-dotnet-runtime"
  ],
  "x-dotnet-acquire": {
    "version": "8.0",
    "mode": "runtime"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "strideShaderExplorer",
          "title": "Stride Shaders",
          "icon": "icons/sdsl-dark.svg"
        }
      ]
    },
    "views": {
      "strideShaderExplorer": [
        {
          "id": "strideShaderContext",
          "name": "Shader Context",
          "when": "resourceLangId == sdsl"
        }
      ]
    },
    "languages": [
      {
        "id": "sdsl",
        "aliases": [
          "Stride Shader",
          "SDSL"
        ],
        "extensions": [
          ".sdsl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/sdsl-light.svg",
          "dark": "./icons/sdsl-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "sdsl",
        "scopeName": "source.sdsl",
        "path": "./syntaxes/sdsl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Stride Shader Tools",
      "properties": {
        "strideShaderTools.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to the language server executable. Leave empty to use bundled server."
        },
        "strideShaderTools.shaderPaths": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional paths to search for shader files."
        },
        "strideShaderTools.vvvvInstallationsFolder": {
          "type": "string",
          "default": "",
          "description": "Folder containing vvvv gamma installations (e.g. C:\\Program Files\\vvvv). Leave empty to use the default Program Files location."
        },
        "strideShaderTools.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "strideShaderTools.diagnostics.delay": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Delay in milliseconds before showing diagnostics after typing. Higher values reduce noise while typing incomplete code."
        }
      }
    },
    "commands": [
      {
        "command": "strideShaderTools.restartServer",
        "title": "Stride Shaders: Restart Language Server"
      },
      {
        "command": "strideShaderTools.showInheritanceTree",
        "title": "Stride Shaders: Show Shader Context"
      },
      {
        "command": "strideShaderTools.addBaseShader",
        "title": "Stride Shaders: Add Base Shader"
      },
      {
        "command": "strideShaderTools.removeBaseShader",
        "title": "Stride Shaders: Remove Base Shader"
      },
      {
        "command": "strideShaderTools.openShader",
        "title": "Stride Shaders: Open Shader File"
      },
      {
        "command": "strideShaderTools.refreshPanels",
        "title": "Stride Shaders: Refresh Panels",
        "icon": "$(refresh)"
      },
      {
        "command": "strideShaderTools.openShaderLink",
        "title": "Stride Shaders: Open Shader Link"
      },
      {
        "command": "strideShaderTools.renameFile",
        "title": "Stride Shaders: Rename Shader File"
      },
      {
        "command": "strideShaderTools.renameShaderInFile",
        "title": "Stride Shaders: Rename Shader Declaration"
      }
    ],
    "debuggers": [
      {
        "type": "sdsl-shader",
        "label": "SDSL Shader Debugger",
        "program": "./dist/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "captureFile": {
                "type": "string",
                "description": "Path to RenderDoc .rdc capture file (auto-detected if omitted)",
                "default": null
              },
              "pixelX": {
                "type": "number",
                "description": "X coordinate of pixel to debug",
                "default": 640
              },
              "pixelY": {
                "type": "number",
                "description": "Y coordinate of pixel to debug",
                "default": 360
              },
              "autoCapture": {
                "type": "boolean",
                "description": "Automatically detect and load latest capture from vvvv",
                "default": true
              },
              "vvvvLogDir": {
                "type": "string",
                "description": "Path to vvvv log folder containing HLSL files"
              },
              "workspaceDirs": {
                "type": "array",
                "description": "Additional directories to search for SDSL files",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "sdsl-shader",
            "request": "launch",
            "name": "Debug Shader (Auto-detect)",
            "autoCapture": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "SDSL: Debug Shader (Auto)",
            "description": "Auto-detect latest capture and debug shader",
            "body": {
              "type": "sdsl-shader",
              "request": "launch",
              "name": "Debug Shader",
              "autoCapture": true
            }
          },
          {
            "label": "SDSL: Debug Shader (Manual)",
            "description": "Debug specific capture file",
            "body": {
              "type": "sdsl-shader",
              "request": "launch",
              "name": "Debug Shader",
              "captureFile": "^\"\\${workspaceFolder}/captures/test_capture.rdc\"",
              "pixelX": 640,
              "pixelY": 360
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "sdsl"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --preserveWatchOutput",
    "check-types": "tsc --noEmit",
    "package": "npm run check-types && node esbuild.js --production",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "test": "vscode-test"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "@vscode/debugadapter": "^1.67.0",
    "@vscode/debugprotocol": "^1.67.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tebjan/Stride.ShaderExplorer"
  },
  "homepage": "https://forum.vvvv.org/t/stride-sdsl-shader-tools-for-vs-code/24975",
  "bugs": {
    "url": "https://github.com/tebjan/Stride.ShaderExplorer/issues"
  },
  "license": "GPL-3.0"
}
